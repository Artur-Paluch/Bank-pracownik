                    <Label Name="TabelaKredytow" Content="Tabela Kredytów"  Tag="Kredyt" Grid.Row="4" Grid.Column="6" Visibility="Hidden" HorizontalAlignment="Center" Grid.ColumnSpan="2" HorizontalContentAlignment="Center" Width="200" Margin="76,5,33,5"/>
